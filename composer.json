{
  "name": "lalaz/scheduler",
  "description": "Task scheduling for Lalaz applications with cron-like syntax",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Gregory Serrao",
      "email": "hello@lalaz.dev"
    }
  ],
  "require": {
    "php": "^8.3",
    "lalaz/cache": "^1.0.0-rc.1"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Lalaz\\Scheduler\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lalaz\\Scheduler\\Tests\\": "tests/"
    }
  },
  "extra": {
    "lalaz": {
      "providers": [
        "Lalaz\\Scheduler\\SchedulerServiceProvider"
      ]
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  }
}
